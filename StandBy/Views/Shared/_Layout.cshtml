<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Titulo"] - Stand</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-select.css"/>
    <link rel="stylesheet" href="~/lib/datepicker/css/bootstrap-datepicker.min.css"/>
    <link rel="stylesheet" href="~/lib/toast/css/iziToast.css"/>
    <link rel="stylesheet" href="~/lib/datatable/css/datatables.css"/>
    <link rel="stylesheet" href="~/lib/datatable/css/buttons.datatables.css"/>
    <link rel="stylesheet" href="~/css/Shared/layout.css"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Principal" asp-action="Inicio">Stand</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Principal" asp-action="Inicio">Início</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Cliente" asp-action="Lista">Clientes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Principal" asp-action="Privacidade">Sobre</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; @DateTime.UtcNow.Year - Stand - <a asp-area="" asp-controller="Principal" asp-action="Privacidade">Privacidade</a>
    </div>
</footer>
<script src="~/lib/jquery-mask/jquery.mask.js" type="text/javascript"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" type="text/javascript"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap-select.js" type="text/javascript"></script>
<script src="~/lib/datepicker/js/bootstrap-datepicker.min.js" type="text/javascript"></script>
<script src="~/lib/datepicker/locales/bootstrap-datepicker.pt-BR.min.js" type="text/javascript"></script>
<script src="~/lib/toast/js/iziToast.js" type="text/javascript"></script>
<script src="~/lib/datatable/js/datatables.js" type="text/javascript"></script>
<script src="~/lib/datatable/js/datatables.buttons.js" type="text/javascript"></script>
<script src="~/js/Shared/layout.js" type="text/javascript" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", false)
</body>
</html>